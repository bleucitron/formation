{
  "env": { "browser": true, "es6": true, "jest": true },
  "extends": ["standard"],
  "globals": { "Atomics": "readonly", "SharedArrayBuffer": "readonly" },
  "parserOptions":
    {
      "ecmaFeatures": { "jsx": true },
      "ecmaVersion": 2018,
      "sourceType": "module",
    },
  "plugins": ["react"],
  "rules":
    {
      "semi": ["error", "always"],
      "space-before-function-paren": ["error", "never"],
      "comma-dangle": ["error", "always-multiline"],
    },
}
